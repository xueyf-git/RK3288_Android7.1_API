<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/BarAndNavigationShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏导航栏同时显示"/>

        <Button
            android:id="@+id/BarAndNavigationHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏导航栏同时隐藏"/>

        <Button
            android:id="@+id/BarShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏显示" />

        <Button
            android:id="@+id/BarHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏隐藏" />

        <Button
            android:id="@+id/NavigationShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导航栏显示" />

        <Button
            android:id="@+id/NavigationHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导航栏隐藏" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>