<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">
    android:orientation="vertical"
    tools:context=".MainAction">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for message..."
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/wifiShow"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="wifi"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/keepalive"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="keepalive"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/test"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="test"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/logrcorder"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="日志记录"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/timeButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="ntp校时测试"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/shooter"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="截图"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/barShow"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="状态栏"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/getPackage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="获取当前lunch名称"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/setPackage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="设置当前桌面lunch"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/launcherButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="lunch测试"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/launcher3Button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="HOME lunch"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/powerManagementButton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="powermanagement测试"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>